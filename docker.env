# ===========================================
# SISTEMA NFE - CONFIGURAÇÃO DOCKER
# ===========================================

# Banco de dados PostgreSQL
DATABASE_URL=postgresql://nfeuser:nfepass@db:5432/nfedb?sslmode=disable
DB_HOST=db
DB_PORT=5432
DB_NAME=nfedb
DB_USER=nfeuser
DB_PASSWORD=nfepass

# Configurações da API
SECRET_KEY=sua_chave_secreta_docker_123456
DEBUG=true
API_HOST=0.0.0.0
API_PORT=8000

# CORS - Frontend
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://frontend:5173
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*
CORS_ALLOW_CREDENTIALS=true

# Redis
REDIS_URL=redis://redis:6379/0

# Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# JWT
JWT_SECRET_KEY=sua_chave_jwt_docker_123456
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logs
LOG_LEVEL=INFO

# Ambiente
ENVIRONMENT=docker
