# Configurações Locais do Sistema NFE - PostgreSQL Local
# Copie este arquivo para .env e ajuste as configurações conforme necessário

# Configurações do Banco de Dados PostgreSQL Local
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nfe_system
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSLMODE=disable

# Connection string padrão (local)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/nfe_system?sslmode=disable

# Configurações do Redis
REDIS_URL=redis://localhost:6379/0

# Configurações de Email (IMAP)
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USERNAME=seu_email@gmail.com
IMAP_PASSWORD=sua_senha_app
IMAP_FOLDER=INBOX

# Configurações JWT
JWT_SECRET_KEY=sua_chave_secreta_muito_segura_aqui
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Configurações da API
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# Configurações de Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=xml,pdf

# Configurações de Log
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log



